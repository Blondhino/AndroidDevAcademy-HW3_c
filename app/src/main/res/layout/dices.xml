<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/dice1_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:layout_margin="@dimen/smallMargin"
        />
    <ImageView
        android:id="@+id/dice2_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:layout_margin="@dimen/smallMargin"
        android:layout_toEndOf="@id/dice1_image"
        />
    <ImageView
        android:id="@+id/dice3_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:layout_margin="@dimen/smallMargin"
        android:layout_toEndOf="@id/dice2_image"
        />
    <ImageView
        android:id="@+id/dice4_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:layout_margin="@dimen/smallMargin"
        android:layout_below="@id/dice1_image"
        />

    <ImageView
        android:id="@+id/dice5_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:layout_margin="@dimen/smallMargin"
        android:layout_below="@id/dice1_image"
        android:layout_toEndOf="@id/dice4_image"
        />

    <ImageView
        android:id="@+id/dice6_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:layout_margin="@dimen/smallMargin"
        android:layout_below="@id/dice1_image"
        android:layout_toEndOf="@id/dice5_image"
        />



</RelativeLayout>